<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">


    <com.wenjian.loopbanner.LoopBanner
            android:id="@+id/lb1"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:lb_indicatorSelect="@drawable/banner_indicator_select"
            app:lb_indicatorUnSelect="@drawable/banner_indicator_unselect"
            app:lb_indicatorStyle="normal"
            app:lb_pageMargin="4dp"
            app:lb_lrMargin="16dp"
            app:lb_interval="4000" />


    <com.wenjian.loopbanner.LoopBanner
            android:id="@+id/lb2"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:lb_indicatorStyle="jd">

    </com.wenjian.loopbanner.LoopBanner>


    <com.wenjian.loopbanner.LoopBanner
            android:id="@+id/lb3"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:lb_canLoop="true"
            app:lb_indicatorStyle="pill"
            app:lb_pageMargin="16dp"
            app:lb_indicatorGravity="bottomRight">

    </com.wenjian.loopbanner.LoopBanner>


</LinearLayout>